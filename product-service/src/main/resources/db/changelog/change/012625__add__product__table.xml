<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="1" author="admin">
        <preConditions>
            <not>
                <tableExists tableName="product"></tableExists>
            </not>
        </preConditions>

        <createTable tableName="product">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="VARCHAR(1000)"/>
            <column name="price" type="DECIMAL(15, 2)">
                <constraints nullable="false"/>
            </column>
            <column name="stock_quantity" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="image_name" type="VARCHAR(255)"/>
            <column name="created" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="deleted" type="BOOLEAN" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createIndex indexName="idx_product_name" tableName="product">
            <column name="name"/>
        </createIndex>
    </changeSet>

    <changeSet id="2" author="admin">
        <preConditions>
            <not>
                <tableExists tableName="category"></tableExists>
            </not>
        </preConditions>

        <createTable tableName="category">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="description" type="VARCHAR(1000)"/>
        </createTable>
    </changeSet>

    <changeSet id="3" author="admin">
        <preConditions>
            <not>
                <foreignKeyConstraintExists foreignKeyName="fk_product_category"/>
            </not>
            <tableExists tableName="product"/>
            <tableExists tableName="category"/>
        </preConditions>

        <addColumn tableName="product">
            <column name="category_id" type="BIGINT"/>
        </addColumn>
        <addForeignKeyConstraint baseTableName="product"
                                 baseColumnNames="category_id"
                                 referencedTableName="category"
                                 referencedColumnNames="id"
                                 constraintName="fk_product_category"/>
    </changeSet>
</databaseChangeLog>